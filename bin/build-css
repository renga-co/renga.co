#!/usr/bin/env node

const fs = require('mz/fs');
const hibiscss = require('hibiscss').default;
const kit = require('hibiscss/default');

const styles = {
  colors: {
    white: 'white',
    offwhite: 'var(--offwhite)',
    brown: 'var(--brown)',
    geraldine: 'var(--geraldine)',
    gray1: 'var(--gray1)',
    gray2: 'var(--gray2)',
    gray3: 'var(--gray3)',
    gray4: 'var(--gray4)',
    gray5: 'var(--gray5)',
    gray6: 'var(--gray6)',
    black: 'var(--gray6)',
  },
  fontFamily: {
    sans: 'Adelle Sans, -apple-system, BlinkMacSystemFont, sans-serif',
    mono: 'monospace',
  },
  fontSize: {
    48: '3rem',
    36: '2.25rem',
    30: '1.875rem',
    24: '1.5rem',
    18: '1.125rem',
    16: '1rem',
    14: '0.875rem',
  },
  fontWeight: {
    normal: 'normal',
    semibold: '500',
    bold: 'bold',
  },
  lineHeight: {
    '1.25': '1.25',
    '1.5': '1.5',
    '1.7': '1.7',
    '2.0': '2.0',
  },
  letterSpacing: {
    loose: '0.75px',
    normal: '0px',
  },
  maxWidths: {
    '450': '450px',
    '700': '700px',
    '900': '900px',
    '1200': '1200px',
  },
  opacity: {
    '0%': 0.0,
    '25%': 0.25,
    '50%': 0.5,
    '60%': 0.6,
    '75%': 0.75,
    '100%': 1.0,
  },
  borderRadius: {
    4: '4px',
    12: '12px',
    30: '30px',
    round: '50%',
  },
  spacing: [0, 8, 16, 24, 48, 64, 96, 144],
};

const outputPath = './src/assets/utilities.css';

async function main() {
  const css = hibiscss(kit(styles), { m: '768px' });
  await fs.writeFile(outputPath, css);
  console.log(`> Wrote styles to ${outputPath}`);
}

main().catch(err => {
  console.error(`> ERR: ${err.message}`);
  console.error(err.stack);
  process.exit(1);
});
